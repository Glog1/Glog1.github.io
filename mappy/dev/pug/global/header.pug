			span.b-product-cart-icon__sum $39
			span.b-product-cart-icon__count 3
		.c-header__button-corner
			a(href="#").e-button-corner Create Poster

		.c-header__burger
			a(href="#").e-burger.js-burger
				span.e-burger__line



