header.c-header.js-header
	.c-header__logo
		a(href="/").b-logo
			.b-logo__figure
				include ../../assets/img/svg/icon/logo.svg
			span.b-logo__title mappy place

	.c-header__navigation.js-mobile-menu
		.b-navigation
			a(href="#").b-navigation__item About
			a(href="#").b-navigation__item Inspiration
			a(href="#").b-navigation__item Support
			a(href="#").b-navigation__item Contact

		.c-header__create-button-mobile
			a(href="#").e-button-frame
				.e-button-frame__triangle
				.e-button-frame__border
